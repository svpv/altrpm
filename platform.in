@alt@%uninstall_info()	\
@alt@if [ $1 = 0 ]; then	\
@alt@	for f in %*; do	\
@alt@		if [ "$f" = "${f%/*}" ]; then	\
@alt@			f="%_infodir/$f"	\
@alt@		fi	\
@alt@		%__install_info --delete --dir-file="${f%/*}/dir" --info-file="$f"	\
@alt@	done	\
@alt@fi	\
@alt@%nil
