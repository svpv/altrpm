@alt@for f in %*; do	\
@alt@	if [ "$f" = "${f%/*}" ]; then	\
@alt@		f="%_infodir/$f"	\
@alt@	fi	\
@alt@	%__install_info --dir-file="${f%/*}/dir" --info-file="$f"	\
@alt@done	\
@alt@%nil
