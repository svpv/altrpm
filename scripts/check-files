# If using normal root, avoid changing anything.
[ -n "$(printf %s "$RPM_BUILD_ROOT" |tr -d ' /.')" ]

cd "$RPM_BUILD_ROOT"

WORKDIR=
exit_handler()
{
	local rc=$?
	trap - EXIT
	[ -z "$WORKDIR" ] || rm -rf -- "$WORKDIR"
	exit $rc
}

trap exit_handler SIGHUP SIGINT SIGQUIT SIGTERM EXIT

WORKDIR="$(mktemp -dt check-files.XXXXXXXXXX)"

export LC_ALL=C

sort >packaged
find "$RPM_BUILD_ROOT" \( -type f -o -type l \) |sort >disk

join -v1 disk packaged |sed -e "s#^$RPM_BUILD_ROOT#    #g"
