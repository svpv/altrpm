PROG="${0##*/}"

case "$RPM_COMPRESS_METHOD" in
	no|none|plain|skip)
		exit 0
		;;
esac

for f in "$@"; do
	case "$RPM_COMPRESS_METHOD" in
		gz*)
			/bin/gzip -9nf "$f"
			;;
		bz*)
			/bin/bzip2 -9f "$f"
			;;
		*)
			/bin/bzip2 -9kf "$f"
			/bin/gzip -9nf "$f"
			SIZE_BZIP2=`@RPMCONFIGDIR@/filesize "$f.bz2" 512`
			SIZE_GZIP=`@RPMCONFIGDIR@/filesize "$f.gz" 512`
			[ "$SIZE_GZIP" -gt "$SIZE_BZIP2" ] && /bin/rm -f "$f.gz" || /bin/rm -f "$f.bz2"
			;;
	esac
done
