. @RPMCONFIGDIR@/functions

script="$1"

RunMethod()
{
	local exe="$1"; shift
	local filter="$exe".files
	[ -x "$filter" ] || return 0
	local file_and_type
	file_and_type=$(file -L -NF$'\t' "$script")
	local filtered
	filtered=$(printf '%s\n' "$file_and_type" |"$filter") ||
		Fatal "$filter failed"
	[ -n "$filtered" ] || return 0
	printf '%s\n' "$script" |"$exe" ||
		Fatal "$exe failed"
}

methods=$(SetupMethods req all)
RunMethods req "$methods" RunMethod
